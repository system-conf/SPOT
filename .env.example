# MySQL Database (Hostinger or your own)
DATABASE_URL="mysql://username:password@host:3306/database"

# VAPID Keys (generate with: npx web-push generate-vapid-keys)
NEXT_PUBLIC_VAPID_PUBLIC_KEY="YOUR_PUBLIC_VAPID_KEY"
VAPID_PRIVATE_KEY="YOUR_PRIVATE_VAPID_KEY"
VAPID_EMAIL="mailto:your@email.com"

# API Security
API_SECRET="your-random-secret-key-min-32-chars"
CRON_SECRET="your-cron-secret-key" # For scheduled notifications processor
WEBHOOK_SECRET="your-webhook-secret-key" # For webhook signature verification (optional)

# Security Configuration
# CORS Allowed Origins (comma-separated, use * for all)
CORS_ALLOWED_ORIGINS="*"
# CORS Allowed Methods (comma-separated)
CORS_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"

# IP Whitelist (comma-separated, CIDR notation supported, leave empty to disable)
IP_WHITELIST=""
# IP Blacklist (comma-separated, CIDR notation supported, leave empty to disable)
IP_BLACKLIST=""

# Rate Limiting
RATE_LIMIT_WINDOW="60000" # Time window in milliseconds (default: 1 minute)
RATE_LIMIT_MAX_REQUESTS="60" # Max requests per window (default: 60)

# Redis Rate Limiting (Upstash)
# Get these from https://upstash.com
UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"
